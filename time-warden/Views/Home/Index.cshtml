@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Time Warden</h1>

        <!-- Display Success Message -->
        @if (TempData["SuccessMessage"] != null)
        {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
        }

        <!-- Display Error Message -->
        @if (TempData["ErrorMessage"] != null)
        {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
        }

        <!-- Display shift information -->
        @if (Model != null)
        {
        <p><strong>@ViewBag.Message</strong></p>

        <!-- Show Clock Out button if allowed -->
        if (ViewBag.CanClockOut != null && ViewBag.CanClockOut == true)
        {
        <form action="@Url.Action("ClockOut", "Home")" method="post">
            <button type="submit" class="btn btn-secondary">Clock Out</button>
        </form>
        }

        <!-- Show Clock In button if allowed -->
        if (ViewBag.CanClockIn != null && ViewBag.CanClockIn == true)
        {
        <form action="@Url.Action("ClockIn", "Home")" method="post">
            <button type="submit" class="btn btn-primary">Clock In</button>
        </form>
        }
        }
        else
        {
        <p><strong>@ViewBag.Message</strong></p>
        }
    </section>
</main>