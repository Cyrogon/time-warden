@model IEnumerable<time_warden.Models.User>

@{
    ViewBag.Title = "Schedule Shift";
}

<h2>Schedule a New Shift</h2>

<form asp-action="Create" asp-controller="Shift" method="post">
    <div class="form-group">
        <label for="employee">Select Employee:</label>
        <select id="employee" name="employeeId" class="form-control" required>
            <option value="">-- Select an Employee --</option>
            @foreach (var employee in Model)
            {
                <option value="@employee.UserId">@employee.FirstName @employee.Surname (@employee.UserId)</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="date">Shift Date:</label>
        <input type="date" id="date" name="shiftDate" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="startTime">Clock In Time:</label>
        <input type="time" id="startTime" name="clockInTime" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="endTime">Clock Out Time:</label>
        <input type="time" id="endTime" name="clockOutTime" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Schedule Shift</button>
</form>